        <locationX>1076</locationX>
        <locationY>602</locationY>
        <connector>
            <targetReference>Get_Campaign_Member_Statuses</targetReference>
        </connector>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <objectType>CampaignMemberStatus</objectType>
        <scale>0</scale>
        <storeOutputAutomatically>true</storeOutputAutomatically>
        <transformValues>
            <transformValueActions>
                <outputFieldApiName>Label</outputFieldApiName>
                <transformType>Map</transformType>
                <value>
                    <elementReference>Get_Default_Campaign_Member_Statuses_Metadata[$EachItem].Label</elementReference>
                </value>
            </transformValueActions>
            <transformValueActions>
                <outputFieldApiName>IsDefault</outputFieldApiName>
                <transformType>Map</transformType>
                <value>
                    <elementReference>Get_Default_Campaign_Member_Statuses_Metadata[$EachItem].IsDefault__c</elementReference>
                </value>
            </transformValueActions>
            <transformValueActions>
                <outputFieldApiName>CampaignId</outputFieldApiName>
                <transformType>Map</transformType>
                <value>
                    <elementReference>$Record.Id</elementReference>
                </value>
            </transformValueActions>
            <transformValueActions>
                <outputFieldApiName>HasResponded</outputFieldApiName>
                <transformType>Map</transformType>
                <value>
                    <elementReference>Get_Default_Campaign_Member_Statuses_Metadata[$EachItem].IsResponded__c</elementReference>
                </value>
            </transformValueActions>
        </transformValues>
    </transforms>
</Flow>
