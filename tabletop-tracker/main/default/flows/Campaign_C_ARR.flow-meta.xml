        </connector>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>Campaign_Member_Default_Status__mdt</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>970</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>Get_Default_Campaign_Member_Statuses_Metadata</targetReference>
        </connector>
        <object>Campaign</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <transforms>
        <description>This transform combines data from the default campaign member statuses records with the campaign to create a collection of new Campaign Member Status records</description>
